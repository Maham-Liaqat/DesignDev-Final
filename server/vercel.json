{
  "version": 2,
  "builds": [
    {
      "src": "backend/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "cd client && npm install",
        "buildCommand": "cd client && npm run build",
        "includeFiles": [
          "client/public/**",
          "client/assets/**",
          "client/node_modules/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1"
    },
    {
      "src": "/(assets/.+)",
      "dest": "/client/dist/$1"
    },
    {
      "src": "/(node_modules/.+)",
      "dest": "/client/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1",
      "continue": true
    }
  ],
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/client/dist/assets/$1"
    },
    {
      "source": "/libs/(.*)", 
      "destination": "/client/dist/libs/$1"
    }
  ]
}
